FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS base
WORKDIR /app
EXPOSE 8080
ENV ASPNETCORE_URLS=http://+:8080

FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src

COPY ClickBand.sln ./
COPY src/ClickBand.Api/ClickBand.Api.csproj src/ClickBand.Api/
RUN dotnet restore ClickBand.sln

COPY . .
RUN dotnet publish src/ClickBand.Api/ClickBand.Api.csproj -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=build /app/publish .
ENTRYPOINT ["dotnet", "ClickBand.Api.dll"]
